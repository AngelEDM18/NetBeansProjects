<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>servlets.servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Listado</servlet-name>
        <servlet-class>servlets.Listado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompruebaLogin</servlet-name>
        <servlet-class>servlets.CompruebaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompruebaAlta</servlet-name>
        <servlet-class>servlets.CompruebaAlta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Modificar</servlet-name>
        <servlet-class>servlets.Modificar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Listado</servlet-name>
        <url-pattern>/Listado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompruebaLogin</servlet-name>
        <url-pattern>/CompruebaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompruebaAlta</servlet-name>
        <url-pattern>/CompruebaAlta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Modificar</servlet-name>
        <url-pattern>/Modificar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
